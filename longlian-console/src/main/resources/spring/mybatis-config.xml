<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "classpath:spring/mybatis-3-config.dtd">

<configuration>

    <!-- 配置数据库方言  目前只有mysql和oracle两种-->
    <properties>
        <property name="dialect" value="mysql"/>
    </properties>
    <settings>
        <!-- 只设置需要的,其他使用默认值 -->
        <!-- 开启缓存,默认就是开启的,2层开关,需要在Mapper文件中也指定 cache 标签才会真正使用缓存 -->
        <setting name="cacheEnabled" value="true"/>
        <!-- 在null时也调用 setter,适应于返回Map,3.2版本以上可用 -->
         <setting name="callSettersOnNulls" value="true"/>
    </settings>
    <typeAliases>
        <!--<package name="com.huaxin.repository.model"></package>-->
    </typeAliases>
    <!-- 配置mysql分页拦截器 start -->
<!--    <plugins>
        <plugin interceptor="com.huaxin.utils.interceptor.PageInterceptor"></plugin>
    </plugins>-->

</configuration>
